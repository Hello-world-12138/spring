<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--
    使用无参构造函数实例化组件进行ioc配置
    一个组件类声明两个组件信息 - 【默认是单例模式】-会实例化两个组件类
    -->
    <bean id ="happycomponent1" class="com.amk.ioc_01.HappyComponent"/>
    <bean id ="happycomponent2" class="com.amk.ioc_01.HappyComponent"/>

    <!--
    静态工厂类声明工厂方法实现ioc的配置

    -->
    <bean id="clientService" class="com.amk.ioc_01.ClientService" factory-method="createInstance"/>

    <!--
    非静态工厂类声明工厂方法实现ioc的配置
    -->
    <bean id="defaultServiceLocator" class="com.amk.ioc_01.DefaultServiceLocator"/>
    <bean id="clientService2" factory-bean="defaultServiceLocator" factory-method="createClientServiceInstance"/>
</beans>