<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 把他们都放在ioc容器中-->
    <bean id="userDao" class="ioc_02.UserDao"/>

    <bean id="userService" class="ioc_02.UserService">
        <!--构造函数传值di的配置
            value：直接属性值
            ref：引用其他的bean beanID值
         -->
         <constructor-arg ref="userDao"/>
    </bean>

    <!--多个构造参数注入-->
    <bean id="userService1" class="ioc_02.UserService">
        <!--构造参数顺序填写值-->
        <constructor-arg value="18"/>
        <constructor-arg value="二狗"/>
        <constructor-arg ref="userDao"/>

    </bean>

    <bean id="userService2" class="ioc_02.UserService">
        <!--构造参数名字填写，不用考虑顺序-->
        <constructor-arg name="name" value="二狗"/>
        <constructor-arg name="age" value="18"/>
        <constructor-arg name="userDao" ref="userDao"/>
    </bean>

    <bean id="userService2" class="ioc_02.UserService">
        <!--构造参数的下角标指定填写，不用考虑顺序，index=构造参数的下角标 从左到右 从0开始-->
        <constructor-arg index="1" value="二狗"/>
        <constructor-arg index="0" value="18"/>
        <constructor-arg index="2" ref="userDao"/>
    </bean>




        <bean id="movieFinder" class="ioc_02.MovieFinder"/>

        <bean id="simpleMovieLister" class="ioc_02.SimpleMovieLister">
        <!-- setter方法，注入movieFinder对象的标识id
             name = 属性名  ref = 引用bean的id值
         -->
        <property name="movieFinder" ref="movieFinder" />

        <!-- setter方法，注入基本数据类型movieName
             name = 属性名 value= 基本类型值
         -->
        <property name="movieName" value="消失的她"/>

        </bean>

</beans>